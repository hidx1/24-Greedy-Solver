#:kivy 1.0.9

<MainScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "asset/background.jpg"

    FloatLayout:
        Label:
            text: "Cards remaining"
            font_size: 30
            pos_hint: {"right": 1 , 'top': 1.4}

        Label:
            text: str(root.cards_remaining)
            font_size: 35
            pos_hint: {"right": 1 , 'top': 1.325}

        #UPPER LAYOUT
        FloatLayout:
            size_hint_y: 1/3

            Image:
                id: deck
                pos_hint: {"right": 0.48, 'top': 2.9}
                size_hint: (0.8, 0.6)
                source: "asset/card_background.png"

            # Image:
            #     id: deck
            #     pos_hint: {"right": 0.482, 'top': 2.9}
            #     size_hint: (0.8, 0.6)
            #     source: "asset/card_background.png"
            #
            # Image:
            #     id: deck
            #     pos_hint: {"right": 0.484, 'top': 2.9}
            #     size_hint: (0.8, 0.6)
            #     source: "asset/card_background.png"
            #
            # Image:
            #     id: deck
            #     pos_hint: {"right": 0.486, 'top': 2.9}
            #     size_hint: (0.8, 0.6)
            #     source: "asset/card_background.png"
            #
            # Image:
            #     id: deck
            #     pos_hint: {"right": 0.488, 'top': 2.9}
            #     size_hint: (0.8, 0.6)
            #     source: "asset/card_background.png"
            #
            # Image:
            #     id: deck
            #     pos_hint: {"right": 0.49, 'top': 2.9}
            #     size_hint: (0.8, 0.6)
            #     source: "asset/card_background.png"

            Button:
                size_hint: (.24, .2)
                pos_hint: {"right": 0.95, "top": 2.8}
                text: "Randomize"
                font_size: 0.05 * root.height
                background_normal: ''
                background_color: 66/255, 134/255, 244/255, 0.2
                on_release: root.update()
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height

            Button:
                size_hint: (.24, .2)
                pos_hint: {"right": 0.95, "top": 2.55}
                text: "Reset"
                font_size: 0.05 * root.height
                background_normal: ''
                background_color: 66/255, 134/255, 244/255, 0.2
                on_release: root.reset()
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
        #MIDDLE LAYOUT
        FloatLayout:
            size_hint_y: 1/3

            Image:
                pos_hint: {"right": 0.6, 'top': 1.8}
                size_hint: (0.8,0.6)
                source: root.card_1

            Image:
                pos_hint: {"right": 0.8, 'top': 1.8}
                size_hint: (0.8,0.6)
                source: root.card_2
            Image:
                pos_hint: {"right": 1.0, 'top': 1.8}
                size_hint: (0.8,0.6)
                source: root.card_3
            Image:
                pos_hint: {"right": 1.2, 'top': 1.8}
                size_hint: (0.8,0.6)
                source: root.card_4

        #BOTTOM LAYOUT
        FloatLayout:
            size_hint_y: 1/3

            Label:
                text: "Answer"
                font_size: 35
                pos: root.x - (0.225 * root.width), root.y + (0.08 * root.height)
            Label:
                text: root.answer
                font_size: 35
                pos: root.x - (0.22125 * root.width), root.y + (0.02 * root.height)
            Label:
                text: "Point"
                font_size: 35
                pos: root.x + (0.225 * root.width), root.y + (0.08 * root.height)
            Label:
                text: str(root.point)
                font_size: 35
                pos: root.x + (0.22125 * root.width), root.y + (0.02 * root.height)
